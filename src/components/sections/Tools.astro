    <div class="mt-4 text-sm text-skin-muted">
      <p>Khám phá thêm về tôi qua các liên kết trên!</p>
    </div>
  </div>
</Section>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const printBtn = document.querySelector(".print-cv-btn");
    if (printBtn) {
      printBtn.addEventListener("click", () => {
        window.print();
      });
    }
  });
</script>
